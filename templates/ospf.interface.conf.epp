<%- |
  String $iface,
  Boolean $stub,
  Array[String] $neighbours,
  Optional[String] $type,
| -%>
    interface "<%= $iface %>" {
      <%- if $stub { -%>
      stub;
      <%- } -%>
      <%- if $type { -%>
      type <%= $type %>;
      <%- } -%>
      <% unless $neighbours.empty { %>
      neighbors {
        <% $neighbours.each |$neigh| { %>
        <%= $neigh %>;
        <% } %>
      };
      <% } %>
    };

